# ChemAgent Environment Configuration
# Copy this file to .env and customize for your environment

# ================================
# Server Configuration
# ================================
CHEMAGENT_PORT=8000
CHEMAGENT_HOST=0.0.0.0
CHEMAGENT_WORKERS=4
CHEMAGENT_RELOAD=false

# ================================
# Parallel Execution
# ================================
CHEMAGENT_PARALLEL=true
CHEMAGENT_MAX_WORKERS=4

# ================================
# Caching
# ================================
CHEMAGENT_CACHE_ENABLED=true
CHEMAGENT_CACHE_TTL=3600
# CHEMAGENT_CACHE_DIR=/path/to/cache

# ================================
# Logging
# ================================
CHEMAGENT_LOG_LEVEL=INFO
# CHEMAGENT_LOG_DIR=logs

# ================================
# Security (Optional)
# ================================
# Enable API key authentication (default: false)
ENABLE_AUTH=false
# Comma-separated list of valid API keys
# CHEMAGENT_API_KEYS=key1,key2,key3
# Rate limiting (requests per minute)
CHEMAGENT_RATE_LIMIT=60

# ================================
# External APIs
# ================================
# ChEMBL API endpoint
CHEMBL_BASE_URL=https://www.ebi.ac.uk/chembl/api/data
# UniProt API endpoint
UNIPROT_BASE_URL=https://rest.uniprot.org
# Request timeout (seconds)
CHEMAGENT_REQUEST_TIMEOUT=30

# ================================
# Features
# ================================
# Enable streaming API responses
CHEMAGENT_STREAMING=true
# Enable performance metrics collection
CHEMAGENT_METRICS=true

# ================================
# Docker-specific (if using Docker)
# ================================
# These override the defaults above when running in Docker
# DOCKER_CHEMAGENT_PORT=8000
