/*
 * Nextflow Configuration
 * Generated by BioPipelines Workflow Composer
 */

// Parameters
params {
    // Input/Output
    outdir = "results"
    
    // Containers
    containers {
        base = "${projectDir}/containers/images/base_1.0.0.sif"
        rnaseq = "${projectDir}/containers/images/rnaseq_1.0.0.sif"
    }
    
    // Resources
    max_cpus = 16
    max_memory = '64.GB'
    max_time = '24.h'
}

// Process configuration
process {
    // Default resources
    cpus = 4
    memory = '8.GB'
    time = '4.h'
    
    // Error handling
    errorStrategy = 'retry'
    maxRetries = 2
    
    // Use containers
    container = params.containers.base
}

// Executor configuration
profiles {
    standard {
        process.executor = 'local'
    }
    
    slurm {
        process.executor = 'slurm'
        process.queue = 'general'
        process.clusterOptions = '--account=default'
    }
    
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
}

// Manifest
manifest {
    name = 'rna_seq_differential_expression'
    author = 'BioPipelines'
    description = 'Auto-generated rna_seq_differential_expression workflow'
    version = '1.0.0'
    nextflowVersion = '>=23.04.0'
}
